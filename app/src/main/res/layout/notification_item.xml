<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/item_flat_white"
  android:orientation="vertical">

  <TextView
    android:id="@+id/notificationContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:layout_gravity="center_vertical"
    android:padding="8dp"
    android:paddingStart="15dp"
    android:gravity="left"
    android:text="Oleg melnyk want to invite you to event"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="16sp"/>

  <LinearLayout
    android:id="@+id/invitationButtonsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/acceptInvitation"
      android:layout_width="100dp"
      android:layout_height="25dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/button_border_shadow"
      android:text="Accept"
      android:textColor="@android:color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

    <Button
      android:id="@+id/declineInvitation"
      android:layout_width="100dp"
      android:layout_height="25dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/button_border_shadow"
      android:text="Decline"
      android:textColor="@android:color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
  </LinearLayout>

  <TextView
    android:id="@+id/notificationTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:layout_gravity="center_vertical"
    android:padding="8dp"
    android:paddingStart="15dp"
    android:gravity="left"
    android:text="2019-04-01 23:55"
    android:textColor="#6F6F6F"
    android:textSize="12sp"/>

</LinearLayout>