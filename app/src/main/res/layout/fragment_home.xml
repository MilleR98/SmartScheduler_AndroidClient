<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f7f7f7"
  tools:context=".fragment.HomeFragment">

  <ImageView
    android:id="@+id/titleBar"
    android:layout_width="362dp"
    android:layout_height="77dp"
    android:scaleType="centerInside"
    android:src="@drawable/top_bar_shape"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/switchTaskBtn"
    android:layout_width="82dp"
    android:layout_height="20dp"
    android:layout_marginTop="45dp"
    android:layout_marginStart="88dp"
    android:background="@drawable/button_flat"
    android:text="Tasks"
    android:textColor="@android:color/white"
    android:textSize="10sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/switchEventsBtn"
    android:layout_width="82dp"
    android:layout_height="20dp"
    android:layout_marginTop="45dp"
    android:layout_marginEnd="88dp"
    android:background="@drawable/button_flat"
    android:text="Events"
    android:textColor="@android:color/white"
    android:textSize="10sp"
    app:layout_constraintEnd_toEndOf="@+id/titleBar"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/home_title"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="Your daily activity"
    android:textColor="#fff"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <ImageView
    android:id="@+id/notificationIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="28dp"
    android:src="@drawable/ic_notifications_black_24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <FrameLayout
    android:id="@+id/home_fragment_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/titleBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>